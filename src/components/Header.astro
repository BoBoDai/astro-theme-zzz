---
import HeaderLink from './HeaderLink.astro';
import {HEADER_IMG, NAME} from "../consts";
---

<header>
    <nav>
        <div class="about-background">
            <div class="about">
                <div class="head-img">
                    <img src={HEADER_IMG} alt="header"/>
                </div>
                <div class="name">
                    <div class="font">{NAME}</div>
                    <div class="progress">
                        <progress value="50" max="100"></progress>
                    </div>
                </div>
                <div class="count">
                    <div class="blog-num">50</div>
                    <div class="blog-unit">NUMBER</div>
                </div>
            </div>
        </div>
        <div class="internal-links">
            <div class="box">
                <HeaderLink class="item" href="/" local="first">推送</HeaderLink>
            </div>
            <div class="box">
                <HeaderLink class="item" href="/blog" local="mid">日程</HeaderLink>
            </div>
            <div class="box">
                <HeaderLink class="item" href="/about" local="last">历程</HeaderLink>
            </div>
        </div>
    </nav>
</header>
<style>
    header {
        margin: 0;
        height: 100px;
        display: flex;
        align-items: center;
        background: black;
        padding: 0 65px 0 65px;
    }

    .about-background {
        width: 290px;
        height: 55px;
        margin-right: 50px;
        border-radius: 27px;
        background: linear-gradient(
                to bottom,
                rgb(54, 54, 54),
                rgb(28, 28, 28),
                rgb(24, 24, 24)
        );
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .about {
        width: 285px;
        height: 50px;
        border-radius: 25px;
        background: linear-gradient(
                to bottom,
                rgb(34, 34, 34),
                rgb(28, 28, 28),
                rgb(20, 20, 20)
        );
        display: flex;
        align-items: center;

        .name {
            width: 165px;
            display: flex;
            flex-direction: column;
            margin-left: 7px;
            margin-right: 15px;

            .font {
                color: white;
                font-size: 15px;
            }

            .progress {
                display: flex;
                appearance: none;
                font-size: 20px;
            }
        }

        .count {
            color: white;
            margin-right: 18px;
            display: flex;
            align-items: center;
            flex-direction: column;

            .blog-num {
                font-weight: bold;
                font-size: 24px;
            }

            .blog-unit {
                color: rgb(123, 123, 123);
                font-size: 8px;
            }
        }
    }

    .head-img {
        width: 43px;
        height: 43px;
        border-radius: 25px;
        background: black;
        display: flex;
        align-items: center;
        justify-content: center;
        border: black 2px solid;

        img {
            border-radius: inherit;
        }
    }

    nav {
        display: flex;
        flex: 1;
        align-items: center;
        justify-content: space-between;
    }

    nav a.active {
        text-decoration: none;
    }

    .internal-links {
        color: white;
        height: 45px;
        display: flex;
        border-radius: 23px;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        border: rgb(50, 50, 50) 2px solid;
        font-weight: bold;

        .box {
            display: flex;
            font-style: oblique;
            font-weight: bold;
            justify-content: center;
            width: 220px;
            font-size: 20px;
        }
    }
</style>
